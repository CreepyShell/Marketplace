extends layout

block content
 link(rel='stylesheet', href='/stylesheets/auth.css')
 form.sign-up
  h1 Sign up
  .mb-3
    label.form-label(for='exampleInputEmail1') Email address
    input#exampleInputEmail1.form-control(type='email', aria-describedby='emailHelp')
    #emailHelp.form-text We&apos;ll never share your email with anyone else.
  .mb-3
    label.form-label(for='inputName') Your name
    input#inputName.form-control(type='email', aria-describedby='emailHelp')
  .mb-3
    label.form-label(for='inputPhone') Your phone
    input#inputName.form-control(type='email', aria-describedby='emailHelp')
    #emailHelp.form-text Optional
  .mb-3
    label.form-label(for='exampleInputPassword1') Password
    input#exampleInputPassword1.form-control(type='password')
  button.btn.btn-primary.mx-auto.d-block(type='submit') Submit


